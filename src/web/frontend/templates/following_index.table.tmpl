<div>
    <table id="following-index-table">
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Your fraction</th>
            <th>Index fraction</th>
            <th>Difference in fraction</th>
        </tr>
        {{ range $stock := .stocks }}
        <tr>
            <td class="stock-name">{{ $stock.Name }}</td>
            <td class="stock-quantity">{{ $stock.Quantity }}</td>
            <td class="stock-price">{{ printf "%.2f" $stock.Price }}</td>
            <td class="stock-current-fraction">{{ printf "%.2f" $stock.CurrentFraction }}</td>
            <td class="stock-suggested-fraction">{{ printf "%.2f" $stock.SuggestedFraction }}</td>
            <td class="stock-difference-in-fraction">{{ printf "%.2f" $stock.DifferenceInFraction }}</td>
            <td><button class="add-stock-button">+</button></td>
            <td><button class="remove-stock-button">-</button></td>
        </tr>
        {{ end }}
    </table>
    <button id="remove-unused-stocks">Remove unused stocks</button>
    <button id="save-changes">Save changes</button>
