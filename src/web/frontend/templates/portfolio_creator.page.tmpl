{{template "base" .}}

{{define "title"}}
Choose Portfolio
{{end}}

{{define "main"}}
<link rel="stylesheet" href="../static/portfolioCreatorForm.css" type="text/css">
<form class="row" id="selectStocksForm" method="post">
    <label>
        Name:
        <input type="text" id="portfolioNameInput" placeholder="Portfolio Name"/>
    </label>
    <br/>
    <div class="row">
        Select Stocks:
        <label>
            <select id="selectStocks">
                {{ range $stock := .stocks }}
                <option value={{$stock.Name}}> {{ $stock.Name }} </option>
                {{ end }}
            </select>
        </label>

        <label>
                Quantity:
                <input id="quantityInput" type="number" value="1" min="1"/>
        </label>

        <label>
            <button id="addStockButton" type="button">
                Add Stock
            </button>
        </label>
    </div>
    <div class="row">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody id="chosenListTbody"></tbody>
        </table>
    </div>
    <button type="button" id="submitButton">Submit</button>
    <div class="row" id="success_text"></div>
</form>
<script src="../static/portfolioCreatorForm.js" ></script>
<script src="../static/portfolioCreatorValidators.js" ></script>
<script>
    $(document).ready(function() {
        $('#selectStocks').select2();
    });
</script>
{{ end }}